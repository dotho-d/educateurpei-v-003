{
  "name": "nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "dev:slow": "next dev",
    "build": "next build",
    "build:critical": "npm run build && npm run critical:extract",
    "critical:extract": "node scripts/extract-critical-css.js",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "clean": "rimraf .next node_modules/.cache .turbo",
    "clean:dev": "npm run clean && npm run dev:slow",
    "clean:build": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:update": "jest --updateSnapshot",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "analyze": "ANALYZE=true npm run build",
    "analyze:server": "BUNDLE_ANALYZE=server npm run build",
    "analyze:browser": "BUNDLE_ANALYZE=browser npm run build",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci collect && lhci assert",
    "type-check": "tsc --noEmit",
    "performance": "npm run build && npm run lighthouse",
    "audit:accessibility": "axe-core",
    "production:full": "npm run build:critical && npm run test:ci && npm run lighthouse:ci"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@phosphor-icons/react": "^2.1.8",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-tabs": "^1.0.4",
    "@sentry/nextjs": "^9.21.0",
    "@types/node": "20.11.30",
    "@types/react": "18.2.67",
    "@types/react-dom": "18.2.22",
    "@vercel/analytics": "^1.5.0",
    "autoprefixer": "10.4.19",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "date-fns": "^3.6.0",
    "embla-carousel-react": "^8.0.0",
    "eslint": "8.57.0",
    "eslint-config-next": "15.1.0",
    "framer-motion": "^11.1.15",
    "input-otp": "^1.2.4",
    "lucide-react": "^0.511.0",
    "next": "15.3.2",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.3.0",
    "postcss": "8.4.38",
    "react": "18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "18.3.1",
    "react-hook-form": "^7.51.1",
    "react-resizable-panels": "^2.1.3",
    "recharts": "^2.12.3",
    "sonner": "^1.4.3",
    "tailwind-merge": "^2.2.2",
    "tailwindcss": "3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "5.4.5",
    "vaul": "^0.9.0",
    "web-vitals": "^5.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.2",
    "@lhci/cli": "^0.14.0",
    "@next/bundle-analyzer": "^15.3.2",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "axe-core": "^4.8.2",
    "critical": "^7.2.1",
    "critters": "^0.0.23",
    "glob": "^11.0.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.10"
  },
  "compilerOptions": {
    "incremental": true,
    "skipLibCheck": true,
    "isolatedModules": true
  }
}
